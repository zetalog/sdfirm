	select ARCH_HAS_SBI_CLOCK
	select DW_PLL5GHZ_TSMC12FFC if DUOWEN_ASIC
	select ARCH_HAS_DW_PLL5GHZ_TIMING if DW_PLL5GHZ_TSMC12FFC
	select ARCH_HAS_DW_PLL5GHZ_DYNAMIC if DUOWEN_ASIC
	select CRCNTL_MUX

