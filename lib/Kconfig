#
# Library Features
#

menu "Library setup"

menu "Bit-wise operations"

config BIT_FLS8
	bool "fls8"

config BIT_FLS16
	bool "fls16"

config BIT_FLS32
	bool "fls32"

config BIT_FLS64
	bool "fls64"

config BIT_FFS16
	bool "ffs16"

config BIT_FFS32
	bool "ffs32"

config BIT_FFS64
	bool "ffs64"

config BIT_HWEIGHT32
	bool "hweight32"

config BIT_HWEIGHT64
	bool "hweight64"

endmenu

menu "Bitmap operations"

config ARCH_HAS_BITS_PER_UNIT_16
	bool
	select BIT_FFS16
	select BIT_FLS16

config ARCH_HAS_BITS_PER_UNIT_32
	bool
	select BIT_FFS32
	select BIT_FLS32

config ARCH_HAS_BITS_PER_UNIT_64
	bool
	select BIT_FFS64
	select BIT_FLS64

config BIT_FIND_CLEAR
	bool "find_clear_bit"

endmenu

menu "Mathematic operations"

config MATH_GCD32
	bool "gcd32u"
	select MATH_MOD32

config MATH_MOD32
	bool "mod32u"

config MATH_MUL32
	bool "mul32u"

config MATH_MUL64
	bool "mul64u"

config MATH_DIV32
	bool "div32u"

config MATH_DIV64
	bool "div64u"

config MATH_MOD64
	bool "mod64u"

endmenu

menu "Checksum algorithms"

config CRC16_CCITT
	bool "CRC16 CCITT"

config CRC32
	bool "CRC32"

endmenu

config MATH_TAYLOR
	bool "Math lib based on Taylor series"

config STDLIB
	bool

menu "Print operations"

config PRINT_VSNPRINTF
	bool "vsnprintf"
	select STDLIB
	select MATH_MOD64
	select MATH_DIV64

config PRINT_SNPRINTF
	bool "snprintf"
	select PRINT_VSNPRINTF

config PRINT_VPRINTF
	bool "vprintf"
	select PRINT_VSNPRINTF

config PRINT_SPRINTF
	bool "sprintf"
	select PRINT_VSNPRINTF

config PRINT_VPRINTF
	bool "vprintf"
	select PRINT_VSNPRINTF

config PRINT_PRINTF
	bool "printf"
	select PRINT_VPRINTF

config PRINT_FP
	bool "floating point"

endmenu

menu "String operations"

config STRING_STRNCMP
	bool "strncmp"
	select STDLIB

config STRING_STRNCPY
	bool "strncpy"
	select STDLIB

config STRING_STRTOUL
	bool "strtoul"
	select STDLIB

config STRING_STRTOULL
	bool "strtoull"
	select STDLIB
	select MATH_MOD64
	select MATH_DIV64

config STRING_STRTOD
	bool "strtod"
	select STDLIB
	depends FP

config STRING_UUID
	bool "uuid"
	select PRINT_SNPRINTF

config STRING_GETOPT
	bool "getopt"
	select PRINT_PRINTF

config STRING_BYTELIST
	bool "byte list"

endmenu

menu "Time opeartions"

config TIME_CLOCK
	bool "clock"
	select MATH_DIV32

endmenu

menu "Cryptographic algorithms"

config CRYPTO_RAND
	bool "rand/srand"

endmenu

source lib/font/Kconfig

endmenu

